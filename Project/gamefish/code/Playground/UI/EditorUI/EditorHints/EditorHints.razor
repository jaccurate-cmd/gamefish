@using Sandbox;
@using Sandbox.UI;
@using GameFish;
@using GameFish.Razor;

@inherits Panel

@namespace Playground.Razor

<root>

	<Keybind Action="@EditorMenuAction" Text="Menu" tooltip="Press to toggle, hold to auto-close." />
	<Keybind Action="@EditorCursorAction" Text="Cursor" tooltip="Press to toggle the cursor." />

	<Keybind Action="Toggle Spectating" Text="@(IsSpectator ? "Play" : "Spectate")" />

</root>
